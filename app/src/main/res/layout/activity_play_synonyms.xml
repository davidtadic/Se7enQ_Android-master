<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.se7enqtest.PlaySynonymsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score1"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:paddingRight="20dp"
        android:textAlignment="textStart"
        android:textColor="#FF249B34"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdown1"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:paddingRight="20dp"
        android:textAlignment="textEnd"
        android:textColor="#FF249B34"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opponentScore1"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:paddingRight="20dp"
        android:textAlignment="textStart"
        android:textColor="#FF249B34"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 SYNONYMS\nor \n2 ANTONYMS"
        android:layout_below="@+id/countdown1"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textSynonyms"
        android:textSize="25sp"
        android:textColor="#FFFF"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_answers"
        android:layout_below="@+id/textSynonyms"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:id="@+id/linearLayout2">
            <Button
                android:id="@+id/answer1Synonyms"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:background="#979292"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/answer2Synonyms"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="7dp"
                android:background="#979292"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/answer3Synonyms"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_marginTop="7dp"
                android:background="#979292"
                android:textColor="#000"
                android:layout_marginEnd="7dp"
                android:textSize="25sp" />

            <Button
                android:id="@+id/answer4Synonyms"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="#979292"
                android:textColor="#000"
                android:layout_marginStart="7dp"
                android:layout_width="0dip"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
